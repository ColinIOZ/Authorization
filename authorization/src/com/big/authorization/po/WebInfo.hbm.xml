<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- the mapping of WebInfo class -->
<hibernate-mapping>
	<class name="com.big.authorization.po.WebInfo" table="web_info" catalog="authorization">
		<id name="id" type="java.lang.String">
			<column name="id" />
		</id>
		<property name="webName" type="java.lang.String">
			<column name="web_name" length="100" not-null="true" />
		</property>
		<property name="webHost" type="java.lang.String">
			<column name="web_host" length="300" />
		</property>
		<property name="logoUrl" type="java.lang.String">
			<column name="logo_url" length="200" />
		</property>
		<property name="briefIntroduction" type="java.lang.String">
			<column name="brief_introduction" length="500" />
		</property>
		<property name="addTime" type="java.util.Date">
			<column name="add_time" />
		</property>
	</class>
</hibernate-mapping>
